{
   "kind":"List",
   "apiVersion":"v1",
   "items":[
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "name": "grafana-skydive"
            },
            "spec": {
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "grafana-skydive:latest"
                    }
                },
                "source": {
                    "contextDir": "redis-cluster/",
                    "git": {
                        "uri": "https://github.com/redhat-cop/containers-quickstarts.git"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "dockerStrategy": {
                        "from": {
                            "kind": "DockerImage",
                            "name": "centos:7"
                        }
                    },
                    "type": "Docker"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ]
            }
        },
      {
          "apiVersion": "v1",
          "kind": "DeploymentConfig",
          "metadata": {
              "name": "grafana-skydive"
          },
          "spec": {
              "minReadySeconds": 0,
              "paused": false,
              "replicas": 1,
              "revisionHistoryLimit": 2,
              "strategy": {
                  "type": "Rolling"
              },
              "template": {
                  "metadata": {
                      "labels": {
                          "name": "grafana-skydive"
                      }
                  },
                  "spec": {
                      "containers": [
                          {
                              "image": "grafana-skydive",
                              "name": "grafana-skydive",
                              "ports": [
                                  {
                                      "containerPort": 3000,
                                      "protocol": "TCP"
                                  }
                              ]
                          }
                      ],
                      "serviceAccount": "grafana",
                      "serviceAccountName": "grafana"
                  }
              },
              "triggers": [
                  {
                      "type": "ConfigChange"
                  },
                  {
                      "imageChangeParams": {
                          "automatic": true,
                          "containerNames": [
                              "grafana-skydive"
                          ],
                          "from": {
                              "kind": "ImageStreamTag",
                              "name": "grafana-skydive:latest"
                          }
                      },
                      "type": "ImageChange"
                  }
              ]
          }
      }
    ]
}
